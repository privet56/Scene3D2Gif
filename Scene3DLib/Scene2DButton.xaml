                            <DoubleAnimation 
                                Storyboard.TargetProperty="(Button.Opacity)" 
                                From="0.3" To="0.6" Duration="0:0:1" AutoReverse="True"  />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers -->
            <StackPanel>
                <Image Source="pack://application:,,,/Scene3DRes;component/res/grid.png" />
